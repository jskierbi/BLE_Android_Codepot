<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.zinno.sensortagcodepot"
    xmlns:android="http://schemas.android.com/apk/res/android">

  <uses-sdk
      android:minSdkVersion="18"
      android:targetSdkVersion="21" />

  <uses-feature
      android:name="android.hardware.bluetooth_le"
      android:required="true" />

  <uses-permission android:name="android.permission.BLUETOOTH" />
  <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
  <uses-permission android:name="android.permission.READ_PHONE_STATE" />
  <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

  <application
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:theme="@style/AppTheme">

    <activity android:name=".SimpleReadActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <activity
        android:name=".DeviceScanActivity"
        android:label="@string/title_scan"
        android:screenOrientation="portrait"></activity>
    <activity
        android:name=".AccelerometerActivity"
        android:label="@string/title_activity_accelerometer" />
    <activity
        android:name=".GyroscopeActivity"
        android:label="@string/title_activity_gyroscope"></activity>
    <activity
        android:name=".HumidityActivity"
        android:label="@string/title_activity_humidity"></activity>
    <activity
        android:name=".TemperatureActivity"
        android:label="@string/title_activity_tempture" />
    <activity
        android:name=".RunningButtonGameActivity"
        android:label="@string/title_activity_button" />
    <activity
        android:name=".MagnetometerActivity"
        android:label="@string/title_activity_magnetometer" />
    <activity
        android:name=".PressureActivity"
        android:label="@string/title_activity_pressure" />
  </application>

</manifest>
